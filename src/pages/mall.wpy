<style lang="less">
  page{
    background-color: #f5f5f5;
  }
  .list{
    width: 690rpx;
    height: auto;
    padding: 0 30rpx;
    display: block;
    margin-bottom: 120rpx;
  }
  .item{
    display: inline-block;
    width: 340rpx;
    height: 550rpx;
    border-radius: 20rpx;
    background-color: #fff;
    margin-bottom: 30rpx;
  }
  .list .item:nth-of-type(even){
    margin-left: 10rpx;
  }
  .img, .img image{
    width: 100%;
    height: 340rpx;
    border-radius: 20rpx 20rpx 0 0;
  }
  .info{
    width: 100%;
    height: 95rpx;
    border-radius: 0 0 20rpx 20rpx;
  }
  .info .name{
    width: 320rpx;
    padding: 30rpx 10rpx;
    height: 70rpx;
    font-size: 25rpx;
    overflow:hidden;
    text-overflow: ellipsis;
  }
  .info .price{
    width: 320rpx;
    padding: 10rpx;
    height: 30rpx;
    font-size: 25rpx;
    color: #de9732;
    overflow:hidden;
    text-overflow: ellipsis;
    white-space:nowrap;
  }
  .swiper{
    width: 690rpx;
    height: 200rpx;
    padding: 20rpx 30rpx;
  }
  .swiper image{
    width: 100%;
    height: 100%;
    border-radius: 20rpx;
  }
</style>
<template>
<view>
  <view>
    <swiper class="swiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <swiper-item>
        <image src="{{requestImgUrl + bannerImg.img}}" class="slide-image" width="355" height="150" />
      </swiper-item>
    </swiper>
  </view>
  <view class="list">
    <block wx:for="{{commodityList}}" key="index" index="index" item="item">
      <view class="item" @tap="goCommodityInfo" data-id="{{item.id}}" data-depict="{{item.depict}}" data-money="{{item.money}}" data-name="{{item.name}}" data-img="{{requestImgUrl + item.img}}" data-detail="{{requestImgUrl + item.detail}}">
        <view class="img">
          <image src="{{requestImgUrl + item.img}}" />
        </view>
        <view class="info">
          <view class="name">{{item.name}}</view>
          <view class="price">{{item.money}}积分</view>
        </view>
      </view>
    </block>
  </view>
  <nav @childFn.user="goPage" />
</view>

</template>

<script>
  import wepy from 'wepy'
  import nav from '../components/nav' // 底部导航
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '餐厅列表'
    }
    components = {
      nav: nav
    }

    mixins = []

    data = {
      requestImgUrl: '',
      bannerImg: null,
      indicatorDots: false,
      autoplay: true,
      interval: 3000,
      duration: 1000,
      commodityList: []
    }


    computed = {

    }

    methods = {
      // 底部导航跳转
      goPage (url, evt) {
        // 销毁当前页{跳转}
        this.$redirect(url)
      },
      goCommodityInfo(e) {
        // 进入商品详情
        // 商品ID
        let id = e.currentTarget.dataset.id
        // 描述
        let depict = e.currentTarget.dataset.depict
        // 商品名
        let name = e.currentTarget.dataset.name
        // 商品图
        let img = e.currentTarget.dataset.img
        // 详情图
        let detail = e.currentTarget.dataset.detail
        // 价格
        let money = e.currentTarget.dataset.money
        this.$navigate(`/pages/commodityDetails?id=${id}&depict=${depict}&money=${money}&name=${name}&img=${img}&detail=${detail}`)
      }
    }

    events = {

    }

    onLoad() {
      this.requestImgUrl = this.$parent.globalData.requestImgUrl
      this.getCommodityList()
      this.getBanner()
    }
    getBanner() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/banner`,
        method: 'GET',
        success: data => {
          console.log(data)
          if (data.data.code == 1) {
            this.bannerImg = data.data.data
            let reg = /\\|\//g
            this.bannerImg['img'] = this.bannerImg['img'].replace(reg, '/')
            this.$apply()
            console.log(this.bannerImg)
          } else {
            wx.showModal({
              title: '',
              content: data.msg
            })
          }
        }
      })
    }
    getCommodityList() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/shop`,
        method: 'GET',
        success: data => {
          console.log(data)
          if (data.data.code == 1) {
            this.commodityList = data.data.data
            let i = 0
            let reg = /\\|\//g
            for (i in this.commodityList) {
              // 替换反斜杠正则
              // replace(reg,"/")
              this.commodityList[i]['img'] = this.commodityList[i]['img'].replace(reg, '/')
              this.commodityList[i]['detail'] = this.commodityList[i]['detail'].replace(reg, '/')
            }
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.msg
            })
          }
        }
      })
    }
  }
</script>
