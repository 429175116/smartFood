<template>
<view>
  <view class="list">
    <view class="item">
      <label>预约人数：</label>
      <view class="con peopleNum">
        <icon class="iconfont icon-prune" @tap="getNumDown"></icon>
        <input type="number" value="{{num}}" bindinput="getNum" />
        <icon class="iconfont icon-tianjia" @tap="getNumUp"></icon>
      </view>
    </view>
    <view class="item">
      <label>预约时间：</label>
      <view class="con time">
        <view>
            <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}">
              <input value='{{time}}' placeholder='选择时间'/>
            </picker>
            <icon class="iconfont icon-rili"></icon>
        </view>
      </view>
    </view>
    <view class="item">
      <label>餐标：</label>
      <view class="con lv">
        <picker data-model="component" range="{{regionss}}" @change="selStandard" value="{{standard}}" custom-item="{{customItem}}">
          <view class="picker">
            {{standard}}
          </view>
        </picker>
      </view>
    </view>
    <view class="item">
      <label>旅行社：</label>
      <view class="con setInp">
        <input type="text"  placeholder="请输入旅行社名称" value="" bindinput="getTeam" />
      </view>
    </view>
    <view class="item">
      <label>客源地：</label>
      <view class="con setInp">
        <input type="text"  placeholder="请输入客源地" value="" bindinput="getOrigin" />
      </view>
    </view>
    <view class="item">
      <label>桌数：</label>
      <view class="con table">
        <input type="number"  placeholder="请输入桌数" value="{{table}}" bindinput="getTable" />
        <view>卓</view>
      </view>
    </view>
    <view class="item">
      <label>导游名称：</label>
      <view class="con setInp">
        <input type="text"  placeholder="请输入导游名称" value="" bindinput="getName" />
      </view>
    </view>
    <view class="item">
      <label>导游电话：</label>
      <view class="con setInp">
        <input type="number"  placeholder="请输入导游电话" value="" bindinput="getMobile" />
      </view>
    </view>
    <view class="item">
      <label>特殊要求：</label>
      <view class="con setInp">
        <input type="text"  placeholder="特殊要求" value="" bindinput="getRemark" />
      </view>
    </view>
  </view>
  <view class="nav">
    <view @tap="upData">提交</view>
  </view>
</view>
</template>

<script>
const date = new Date()
const years = []
const months = []
const days = []
const hours = []
const minutes = []
// 获取年
for (let i = date.getFullYear(); i <= date.getFullYear() + 1; i++) {
  years.push('' + i)
}
// 获取月份
for (let i = 1; i <= 12; i++) {
  if (i < 10) {
    i = '0' + i
  }
  months.push('' + i)
}
// 获取日期
for (let i = 1; i <= 31; i++) {
  if (i < 10) {
    i = '0' + i
  }
  days.push('' + i)
}
// 获取小时
for (let i = 0; i < 24; i++) {
  if (i < 10) {
    i = '0' + i
  }
  hours.push('' + i)
}
// 获取分钟
for (let i = 0; i < 60; i++) {
  if (i < 10) {
    i = '0' + i
  }
  minutes.push('' + i)
}
  import wepy from 'wepy'
  import check from '../mixins/check'
  export default class SetPreordain extends wepy.page {
    config = {
      navigationBarTitleText: '预定表单'
    }
    components = {

    }

    mixins = [check]

    data = {
      userInfo: null,
      mess_id: '',
      standard: '请选择用餐标准',
      regionss: ['标准1', '标准2', '标准3', '标准4'],
      time: '',
      multiArray: [years, months, days, hours, minutes],
      multiIndex: [0, 9, 16, 10, 17],
      chooseYear: '',
      num: 0,
      team: '',
      origin: '',
      table: '',
      name: '',
      mobile: '',
      remark: '',
      title: '',
      reserveTime: ''
    }

    computed = {

    }

    methods = {
      selStandard(e) {
        this.standard = e.detail.value
        let area = ''
        for (let i in this.standard) {
          if (this.standard[i] !== '全部' && this.standard[i] !== '请选择详细地址') {
            area += this.regionss[i]
          }
        }
        this.standard = area
      },
      getNumDown() {
        if (this.num <= 1) {
          return ''
        }
        this.num -= 1
        this.$apply()
      },
      getNumUp() {
        this.num += 1
        this.$apply()
      },
      getNum(e) {
        // 获取人数
        this.num = parseInt(e.detail.value)
      },
      getTeam(e) {
        // 获取旅行社
        this.team = e.detail.value
      },
      getOrigin(e) {
        // 获取客源地
        this.origin = e.detail.value
      },
      getTable(e) {
        // 获取桌数
        this.table = parseInt(e.detail.value)
      },
      getName(e) {
        // 获取导游姓名
        this.name = e.detail.value
      },
      getMobile(e) {
        // 获取手机号
        this.mobile = e.detail.value
      },
      getRemark(e) {
        // 获取备注
        this.remark = e.detail.value
      },
      upData() {
        if (this.num <= 0) {
          wx.showModal({
            title: '',
            content: '请输入预约人数'
          })
          return ''
        }
        if (this.time === '') {
          wx.showModal({
            title: '',
            content: '请选择时间'
          })
          return ''
        } else {
          // 时间转时间戳
          this.reserveTime = new Date(this.time).getTime()
          this.reserveTime = this.reserveTime / 1000
        }
        if (this.standard === '请选择用餐标准') {
          wx.showModal({
            title: '',
            content: '请选择用餐标准'
          })
          return ''
        }
        if (this.check.isNull(this.team)) {
          wx.showModal({
            title: '',
            content: '请输入旅行社'
          })
          return ''
        }
        if (this.check.isNull(this.origin)) {
          wx.showModal({
            title: '',
            content: '请输入客源地'
          })
          return ''
        }
        if (this.table <= 0) {
          wx.showModal({
            title: '',
            content: '请输入桌数'
          })
          return ''
        }
        if (this.check.isNull(this.name)) {
          wx.showModal({
            title: '',
            content: '请输入导游姓名'
          })
          return ''
        }
        if (this.check.isPhone(this.mobile)) {
          wx.showModal({
            title: '',
            content: '请输入手机号'
          })
          return ''
        }
        wx.request({
          url: `${this.$parent.globalData.requestUrl}/reservation`,
          method: 'POST',
          data: {
            uid: this.userInfo.id,
            mess_id: this.mess_id,
            num: this.num,
            reserve_time: this.reserveTime,
            package: this.standard,
            team: this.team,
            origin: this.origin,
            table: this.table,
            name: this.name,
            mobile: this.mobile,
            remark: this.remark,
            title: this.title
          },
          success: data => {
            if (data.data.code === '1') {
              wx.showModal({
                title: '',
                content: '预约成功'
              })
              this.$redirect('/pages/index')
              this.$apply()
            } else {
              wx.showModal({
                title: '',
                content: data.data.msg
              })
            }
          }
        })
      }
    }

    events = {}

    onLoad(options) {
      this.mess_id = options.id
      this.title = options.name
      this.userInfo = this.$parent.globalData.userInfo
      this.chooseYear = this.multiArray[0][0]
    }

    // 获取时间日期
    bindMultiPickerChange(e) {
      this.multiIndex = e.detail.value
      const index = this.multiIndex
      const year = this.multiArray[0][index[0]]
      const month = this.multiArray[1][index[1]]
      const day = this.multiArray[2][index[2]]
      const hour = this.multiArray[3][index[3]]
      const minute = this.multiArray[4][index[4]]
      this.time = year + '/' + month + '/' + day + ' ' + hour + ':' + minute
    }
    // 监听picker的滚动事件
    bindMultiPickerColumnChange(e) {
      // 获取年份
      if (e.detail.column === 0) {
        let chooseYear = this.multiArray[e.detail.column][e.detail.value]
      }
      if (e.detail.column === 1) {
        let num = parseInt(this.multiArray[e.detail.column][e.detail.value])
        let temp = []
        if (num === 1 || num === 3 || num === 5 || num === 7 || num === 8 || num === 10 || num === 12) {
          // 判断31天的月份
          for (let i = 1; i <= 31; i++) {
            if (i < 10) {
              i = '0' + i
            }
            temp.push('' + i)
          }
          this.multiArray[2] = temp
        } else if (num === 4 || num === 6 || num === 9 || num === 11) {
          // 判断30天的月份
          for (let i = 1; i <= 30; i++) {
            if (i < 10) {
              i = '0' + i
            }
            temp.push('' + i)
          }
          this.multiArray[2] = temp
        } else if (num === 2) {
          // 判断2月份天数
          let year = parseInt(this.chooseYear)
          if (((year % 400 === 0) || (year % 100 !== 0)) && (year % 4 === 0)) {
            for (let i = 1; i <= 29; i++) {
              if (i < 10) {
                i = '0' + i
              }
              temp.push('' + i)
            }
            this.multiArray[2] = temp
          } else {
            for (let i = 1; i <= 28; i++) {
              if (i < 10) {
                i = '0' + i
              }
              temp.push('' + i)
            }
            this.multiArray[2] = temp
          }
        }
      }
      var data = {
        multiArray: this.multiArray,
        multiIndex: this.multiIndex
      }
      data.multiIndex[e.detail.column] = e.detail.value
      this.setData(data)
    }
  }
</script>
