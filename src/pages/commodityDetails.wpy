<style lang="less">
  page{
    background-color: #f9f9f9;
  }
  .swiper{
    width: 750rpx;
    height: 500rpx;
  }
  .swiper image{
    width: 100%;
    height: 100%;
  }
  .info{
    width: 750rpx;
    height: auto;
    background-color: #fff;
  }
  .price{
    width: 690rpx;
    height: 105rpx;
    line-height: 105rpx;
    padding: 0 30rpx;
    font-size: 50rpx;
    color: #de9732;
  }
  .name{
    width: 690rpx;
    padding: 0 30rpx 30rpx 30rpx;
    font-size: 30rpx;
    color: #3a3a3a;
  }
  .commodityInfoImg{
    margin-bottom: 110rpx;
  }
  .commodityInfoImg, .commodityInfoImg image{
    display: block;
  }
  .perating{
    position: fixed;
    bottom: 0rpx;
    width: 750rpx;
    height: 97rpx;
  }
  .perating, .perating view{
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .perating view{
    width: 375rpx;
    height: 97rpx;
    background-color: #fff;
    color: #333;
    font-size: 30rpx;
  }
  .perating .seCar{
    background-color: #de9732;
    color: #fff;
  }
</style>
<template>
<view>
  <view>
    <swiper class="swiper" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
      <swiper-item>
        <image src="{{img}}" class="slide-image" width="355" height="150" />
      </swiper-item>
    </swiper>
  </view>
  <view class="info">
    <view class="price">{{money}}积分</view>
    <view class="name">{{name}}</view>
    <view class="name">{{depict}}</view>
  </view>
  <view class="commodityInfoImg">
    <image src="{{detail}}" style="width:{{autoW}}px;height:{{autoH}}px" bindload='autoImage' />
  </view>
  <view class="perating">
    <view class="" @tap="goSettlement">立即兑换</view>
    <view class="seCar" @tap="setCar">加入购物车</view>
  </view>
</view>

</template>

<script>
  import wepy from 'wepy'
  export default class CommodityDetails extends wepy.page {
    config = {
      navigationBarTitleText: '商品详情'
    }
    components = {}

    mixins = []

    data = {
      userInfo: null,
      id: '',
      name: '',
      depict: '',
      img: '',
      detail:'',
      money: '',
      address_id: '',
      indicatorDots: false,
      autoplay: true,
      interval: 3000,
      duration: 1000,
      autoW: 0,
      autoH: 0
    }

    computed = {

    }

    methods = {
      // 控制背景图大小
      autoImage(e) {
        // 获取图片的宽高
        let index = e.currentTarget.dataset.index
        var imgW = e.detail.width
        var imgH = e.detail.height
        // 计算图片比例
        var imgScale = imgW / imgH
        // 声明自适应宽高变量
        var autoW = ''
        var autoH = ''
        // 获取屏幕宽度，并将图片设置为屏幕等宽
        wx.getSystemInfo({
          success: res => {
            autoW = res.windowWidth
            autoH = autoW / imgScale
            this.autoW = autoW
            this.autoH = autoH
            console.log(this.autoW)
            console.log(this.autoH)
            this.$apply()
          }
        })
      },
      goSettlement() {
        if (!this.address_id) {
          wx.showModal({
            title: '',
            content: '暂无收货地址，是否添加？',
            success: res => {
              if (res.confirm) {
                // 新增地址
                this.$navigate(`/pages/setAddress?info=`)
              }
            }
          })
          return ''
        }
        wx.request({
          url: `${this.$parent.globalData.requestUrl}/order`,
          method: 'POST',
          data: {
            uid: this.userInfo.id,
            title: this.name,
            shop_id: this.id,
            img: this.img,
            num: 1,
            integral: this.money,
            address_id: this.address_id,
            type: 2
          },
          success: data => {
            if (data.data.code == 1) {
              wx.showModal({
                title: '',
                content: `${this.name}下单成功`
              })
              wx.navigateBack()
            } else {
              wx.showModal({
                title: '',
                content: data.data.msg
              })
            }
          }
        })
      },
      setCar() {
        if (!this.address_id) {
          wx.showModal({
            title: '',
            content: '暂无收货地址，是否添加？',
            success: res => {
              if (res.confirm) {
                // 新增地址
                this.$navigate(`/pages/setAddress?info=`)
              }
            }
          })
          return ''
        }
        // 加入购物车
        wx.request({
          url: `${this.$parent.globalData.requestUrl}/order`,
          method: 'POST',
          data: {
            uid: this.userInfo.id,
            title: this.name,
            img: this.img,
            shop_id: this.id,
            num: 1,
            integral: this.money,
            address_id: this.address_id,
            type: 0
          },
          success: data => {
            if (data.data.code == 1) {
              var that = this
              wx.showModal({
                title: '',
                content: '添加购物车成功，是否前往？',
                success: function (res) {
                  console.log(res)
                  // if (res.confirm) {
                  //   console.log('++')
                  //   // 新增地址
                  //   this.$navigate(`/pages/setAddress?info=`)
                  // } else {
                  //   console.log('--')
                  // }
                }
              })
            } else {
              wx.showModal({
                title: '',
                content: data.data.msg
              })
            }
          }
        })
      }
    }

    events = {

    }

    onLoad(options) {
      // 商品ID
      this.id = options.id
      // 描述
      this.depict = options.depict
      // 商品名
      this.name = options.name
      // 商品图
      this.img = options.img
      // 详情图
      this.detail = options.detail
      // 价格
      this.money = options.money
    }
    onShow() {
      this.userInfo = this.$parent.globalData.userInfo
      // 获取收货地址ID
      this.getAddressList()
    }
    // 获取地址列表
    getAddressList() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/users_address`,
        method: 'POST',
        data: {
          uid: this.userInfo.id
        },
        success: data => {
          console.log(data)
          if (data.data.code == 1) {
            let addressList = data.data.data
            if (addressList.length <= 0) {
              wx.showModal({
                title: '',
                content: '暂无收货地址，请前往添加',
                success: res => {
                  console.log(res)
                  if (res.confirm) {
                    console.log('++')
                    // 新增地址
                    this.$navigate(`/pages/setAddress?info=`)
                  } else {
                    console.log('--')
                  }
                }
              })
              return ''
            }
            this.address_id = addressList[0].id
            this.$apply()
          } else {

            // wx.showModal({
            //   title: '',
            //   content: data.data.msg
            // })
          }
        }
      })
    }
  }
</script>
