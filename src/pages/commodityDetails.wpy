</template>

<script>
  import wepy from 'wepy'
  export default class CommodityDetails extends wepy.page {
    config = {
      navigationBarTitleText: '商品详情'
    }
    components = {
      
    }

    mixins = []

    data = {
      imgUrls: [
        '/img/daw.jpg',
        '/img/daw.jpg',
        '/img/daw.jpg'
      ],
      indicatorDots: false,
      autoplay: true,
      interval: 3000,
      duration: 1000,
      commodityImgList: [
        '/img/daw.jpg',
        '/img/daw.jpg',
        '/img/daw.jpg'
      ],
      autoW: [],
      autoH: []
    }

    computed = {

    }

    methods = {
      // 控制背景图大小
      autoImage(e) {
        // 获取图片的宽高
        let index = e.currentTarget.dataset.index
        var imgW = e.detail.width
        var imgH = e.detail.height
        // 计算图片比例
        var imgScale = imgW / imgH
        // 声明自适应宽高变量
        var autoW = ''
        var autoH = ''
        // 获取屏幕宽度，并将图片设置为屏幕等宽
        wx.getSystemInfo({
          success: res => {
            autoW = res.windowWidth
            autoH = autoW / imgScale
            this.autoW[index] = autoW
            this.autoH[index] = autoH
            console.log(this.autoW)
            console.log(this.autoH)
            this.$apply()
          }
        })
      }
    }

    events = {

    }

    onLoad() {

    }
  }
</script>
