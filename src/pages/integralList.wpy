<script>
  import wepy from 'wepy'
  export default class IntegralList extends wepy.page {
    config = {
      navigationBarTitleText: '积分列表'
    }
    components = {

    }

    mixins = []

    data = {
      userInfo: null,
      listData: [
        {'name': '商品商品商品', 'price': '20', 'time': '2019.10.11', 'num': '3','type': '1'},
        {'name': '餐厅餐厅餐厅', 'price': '20', 'time': '2019.10.11', 'num': '3','type': '2'},
        {'name': '餐厅餐厅餐厅', 'price': '20', 'time': '2019.10.11', 'num': '3','type': '2'}
      ]
    }

    computed = {

    }

    methods = {

    }

    events = {

    }

    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
      console.log(this.userInfo)
      this.getIntegralList()
    }
    getIntegralList() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/integral`,
        method: 'POST',
        data: {
          uid: this.userInfo.id
        },
        success: data => {
          console.log(data)
          if (data.data.code == 1) {
            this.listData = data.data.data
            let i = 0
            for (i in this.listData) {
              // 替换反斜杠正则
              // replace(reg,"/")
              var reg=/\\|\//g;
              this.listData[i]['img'] = this.listData[i]['img'].replace(reg,"/")
              this.listData[i]['detail'] = this.listData[i]['detail'].replace(reg,"/")
            }
            console.log(this.listData)
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.data.msg
            })
          }
        }
      })
    }
  }
</script>
