<template>
<view>
  <view class="list">
    <block wx:for="{{diningRoom}}" key="index" index="index" item="item">
      <view class="item" data-id="{{item.id}}" data-detail="{{item.detail}}" @tap="goDiningRoomInfo">
        <view class="img">
          <image src="{{requestImgUrl + item.img}}" />
        </view>
        <view class="info">
          <view class="name">{{item.name}}</view>
          <view class="address">
            <icon class="iconfont icon-map"></icon>
            {{item.address}}
          </view>
        </view>
      </view>
    </block>
  </view>
  <view class="nav">
    <view class="history" @tap="goReservationList">
      <view>
        <icon class="iconfont icon-ai-list"></icon>
      </view>
      <view>预约列表</view>
    </view>
    <view class="mall" @tap="goMall">
      <view>
        <icon class="iconfont icon-jifenshangcheng"></icon>
      </view>
      <view>积分商城</view>
    </view>
  </view>
</view>
</template>

<script>
  import wepy from 'wepy'
  export default class Index extends wepy.page {
    config = {
      navigationBarTitleText: '餐厅列表'
    }
    components = {

    }

    mixins = []

    data = {
      userInfo: null,
      requestImgUrl: '',
      diningRoom: [
        {"name": "奥格瑞玛", "address": "卡利姆多", "img": "/img/daw.jpg", "detail": "/img/daw.jpg", "id": "1"},
        {"name": "银月城", "address": "卡利姆多", "img": "/img/daw.jpg", "detail": "/img/daw.jpg", "id": "1"},
        {"name": "幽暗城", "address": "卡利姆多", "img": "/img/daw.jpg", "detail": "/img/daw.jpg", "id": "1"},
        {"name": "雷霆崖", "address": "卡利姆多", "img": "/img/daw.jpg", "detail": "/img/daw.jpg", "id": "1"},
        {"name": "十字路口", "address": "卡利姆多", "img": "/img/daw.jpg", "detail": "/img/daw.jpg", "id": "1"}
      ]
    }

    computed = {

    }

    methods = {
      goDiningRoomInfo(e) {
        // 进入餐厅详情
        this.$navigate(`/pages/restaurantInfo?id=${e.currentTarget.dataset.id}&detail=${e.currentTarget.dataset.detail}`)
      },
      goReservationList(e) {
        // 进入预约列表
        this.$navigate(`/pages/reservationList?id=${e.currentTarget.dataset.id}`)
      },
      goMall() {
        // 进入积分商城
        this.$parent.globalData.navAction = ['noAction', 'action', 'noAction', 'noAction']
        this.$redirect(`/pages/mall`)
      }
    }

    events = {

    }

    onLoad() {
      this.userInfo = this.$parent.globalData.userInfo
      this.requestImgUrl = this.$parent.globalData.requestImgUrl
      console.log(this.userInfo)
      this.getFoodList()
    }
    getFoodList() {
      wx.request({
        url: `${this.$parent.globalData.requestUrl}/index`,
        method: 'GET',
        data: {
          mobile: this.userName,
          password: this.userPaw
        },
        success: data => {
          console.log(data)
          if (data.data.code == 1) {
            this.diningRoom = data.data.data
            let i = 0
            for (i in this.diningRoom) {
              // 替换反斜杠正则
              // replace(reg,"/")
              var reg=/\\|\//g;
              this.diningRoom[i]['img'] = this.diningRoom[i]['img'].replace(reg,"/")
              this.diningRoom[i]['detail'] = this.diningRoom[i]['detail'].replace(reg,"/")
            }
            console.log(this.diningRoom)
            this.$apply()
          } else {
            wx.showModal({
              title: '',
              content: data.msg
            })
          }
        }
      })
    }
  }
</script>
